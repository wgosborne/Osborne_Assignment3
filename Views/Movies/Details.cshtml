@model Osborne_Assignment3.Models.MovieDetailsVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.movie.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.movie.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.movie.Hyperlink)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.movie.Hyperlink)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.movie.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.movie.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.movie.Poster)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.movie.Poster)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.movie.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.movie.Year)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.movie.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div>
    Average Tweet Sentiment:
    @if (Model.AvTweetSentiment() != 0)
    {
        <span>@string.Format("{0:n2}", Math.Abs(Model.AvTweetSentiment()) * 100)%</span>
    }

    @if (Model.AvTweetSentiment() > 0)
    {
        <span>Positive</span>
    }
    else if (Model.AvTweetSentiment() < 0)
    {
        <span>Negative</span>
    }
    else
    {
        <span>Neutral</span>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Sentiment
            </th>
            <th>
                Tweet
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tweet in Model.Tweets)
        {
            <tr>
                <td>
                    @tweet.Sentiment
                </td>
                <td>
                    @tweet.Tweet
                </td>
            </tr>
        }
    </tbody>
</table>