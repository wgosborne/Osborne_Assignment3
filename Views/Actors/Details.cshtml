<div>
    Average Tweet Sentiment:
    @if (Model.AvTweetSentiment() != 0)
    {
        <span>@string.Format("{0:n2}", Math.Abs(Model.AvTweetSentiment()) * 100)%</span>
    }

    @if (Model.AvTweetSentiment() > 0)
    {
        <span>Positive</span>
    }
    else if (Model.AvTweetSentiment() < 0)
    {
        <span>Negative</span>
    }
    else
    {
        <span>Neutral</span>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Sentiment
            </th>
            <th>
                Tweet
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tweet in Model.Tweets)
        {
            <tr>
                <td>
                    @tweet.Sentiment
                </td>
                <td>
                    @tweet.Tweet
                </td>
            </tr>
        }
    </tbody>
</table>